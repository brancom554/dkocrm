    <script>
        function togglePass() {
            var pass1 = document.getElementById("oldpass");
            var pass2 = document.getElementById("newpass");
            if (pass1.type === "password" && pass2.type === "password") {
                pass1.type = "text";
                pass2.type = "text";
            } else {
                pass1.type = "password";
                pass2.type = "password";
            }
        }


        function openDialog() {
            $("#contact_img").click()
        }

        $("#contact_img").change(function() {
            $('#apercu').attr('src', '<?= $iniObj->UIPath ?>/uploads/user_avatar.png');
            // recuperation de l'extension du fichier
            var cheminImage = $(this)[0].value;
            var extension = cheminImage.substring(cheminImage.lastIndexOf('.') + 1).toLowerCase();

            if (extension == 'gif' || extension == 'png' || extension == 'jpg' || extension == 'jpeg') {

                if (this.files && this.files[0]) {

                    var reader = new FileReader();
                    reader.onload = function(e) {
                        $('#apercu').attr('src', e.target.result);
                    }

                    reader.readAsDataURL(this.files[0]);
                }
            }
        })

        $("#editEdit").on("submit", function() {
            var email = $("input[name='email']").val();
            var lastname = $("input[name='lastname']").val();
            var firstname = $("input[name='firstname']").val();
            var phone = $("input[name='phone']").val();


            //alert(img);
            $.ajax({
                method: "POST",
                url: "/edituser",
                data: {
                    email: email,
                    lastname: lastname,
                    firstname: firstname,
                    phone: phone
                    // oldpassword: oldpassword,
                    // newpassword: newpassword
                },
                success: function(msg) {
                    console.log(msg);
                    var val = msg.split("||");
                    if (val[0] == "true") {
                        $.notify(val[1], "success");
                        location.reload();
                    } else if (val[0] == "false") {
                        $.notify(val[1], "error");
                    }
                }
            })

            return false;
        })

        $("#").on("", function() {
            var oldpassword = $("input[name='pass1']").val();
            var newpassword = $("input[name='pass2']").val();
            //alert(newpassword);
            $.ajax({
                method: "POST",
                url: "/edipass",
                data: {
                    oldpassword: oldpassword,
                    newpassword: newpassword
                },
                success: function(msg) {
                    console.log(msg);
                    var val = msg.split("||");
                    if (val[0] == "true") {
                        toastr["success"](val[1]);
                    } else if (val[0] == "false") {
                        toastr["error"](val[1]);
                    }
                }
            })

            return false;
        })

        function editPass() {

            var oldpassword = $("input[name='pass1']").val();
            var newpassword = $("input[name='pass2']").val();
            //alert(newpassword);
            $.ajax({
                method: "POST",
                url: "/edipass",
                data: {
                    oldpassword: oldpassword,
                    newpassword: newpassword
                },
                success: function(msg) {
                    console.log(msg);
                    var val = msg.split("||");
                    if (val[0] == "true") {
                        toastr["success"](val[1]);
                        $("#editPass")[0].reset();
                    } else if (val[0] == "false") {
                        toastr["error"](val[1]);
                    }
                }
            })
        }

        function uploapFile() {
            var form = $("#profil_img")[0];
            var formData = new FormData(form);
            //console.log(form);
            $.ajax({
                url: "/profilImg",
                type: "POST",
                enctype: 'multipart/form-data',
                data: formData,
                processData: false,
                contentType: false,
                cache: false,
                timeout: 600000,
                success: function(msg) {
                    console.log(msg);
                    var val = msg.split("||");
                    if (val[0] == "true") {
                        toastr["success"](val[1]);
                        location.reload();
                    }
                }
            })
        }
    </script>